<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_create_vegetable"
    android:orientation="vertical"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_top_10dp"
        android:orientation="vertical"
        android:weightSum="11">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="0.9"
            android:background="@drawable/custom_bg_edit_text"
            android:hint="Enter name of Vegetable"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/edi_name_vegetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_right_5dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_bg_edit_text"
                android:gravity="center"
                android:text="PH"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="5">

                <SeekBar
                    android:id="@+id/volume_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_right_5dp"
                    android:layout_weight="4"
                    android:max="14"
                    android:splitTrack="false"
                    android:thumb="@drawable/item_thumb" />

                <TextView
                    android:id="@+id/tv_value_ph"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="0.9"
            android:background="@drawable/custom_bg_edit_text"
            android:hint="Pesticides"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/edt_pesticides"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_right_5dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="0.9"
            android:background="@drawable/custom_bg_edit_text"
            android:hint="Descriptions"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_right_5dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_bg_edit_text"
                    android:gravity="center"
                    android:padding="@dimen/padding_top_10dp"
                    android:text="CHOICE DAY"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_right_5dp"
                android:text="From"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/pick_day_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_right_5dp"
                android:layout_weight="4"
                android:alpha="0.8"
                android:background="@drawable/custom_bg_edit_text"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_right_5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/padding_top_10dp"
                android:text="To"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/pick_day_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_right_5dp"
                android:layout_weight="4"
                android:alpha="0.8"
                android:background="@drawable/custom_bg_edit_text"
                android:gravity="center"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_vegetable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/padding_right_5dp"
                android:src="@drawable/ic_garden" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_create_vegetable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_create"
                android:gravity="center"
                android:padding="15dp"
                android:text="CREATE "
                android:textColor="@color/green_garden"
                android:textSize="@dimen/size_text_head_lv2" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>