<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgExplainMenu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_kiosk_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding_edit_left"
        android:layout_marginLeft="@dimen/padding_edit_left"
        android:layout_marginRight="@dimen/padding_edit_right"
        android:layout_marginTop="@dimen/padding_edit_left"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite" />
</LinearLayout>