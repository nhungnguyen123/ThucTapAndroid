<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_back_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/color_orange"
            android:orientation="vertical"
            android:padding="@dimen/padding_right_5dp">

            <ImageView
                android:id="@+id/img_vegetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_garden" />

            <TextView
                android:id="@+id/tv_name_vegetable_client"
                style="@style/TextNormalColorWhiteLv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bap Cai" />

            <TextView
                android:id="@+id/tv_description_vegetable_client"
                style="@style/TextNormalColorWhiteLv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sản phẩm hihi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="@dimen/padding_right_5dp"
                android:weightSum="5">

                <TextView
                    style="@style/TextNormalColorWhiteLv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="2dp"
                    android:text="Total Garden" />

                <TextView
                    style="@style/TextNormalColorWhiteLv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:id="@+id/tv_total_garden"
                    style="@style/TextNormalColorWhiteLv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_right_5dp"
                    android:text="20" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>