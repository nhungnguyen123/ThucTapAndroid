<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView

            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@style/TextNormalLv2ColorBack"
            android:text="STT" />

        <TextView
            android:id="@+id/text_name"
            style="@style/TextNormalLv2ColorBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:text="Name Garden "
            android:textSize="@dimen/size_text_normal_lv2" />


        <TextView
            android:id="@+id/text_address"
            style="@style/TextNormalLv2ColorBack"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="Address" />

        <TextView
            android:id="@+id/img_edit"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            style="@style/TextNormalLv2ColorBack"
            android:singleLine="true"
            android:src="@android:drawable/ic_menu_edit"
            android:text="Edit"
            android:textSize="@dimen/size_text_normal_lv2_5" />

        <TextView
            android:id="@+id/img_delete"
            android:layout_width="0dp"
            android:layout_height="30dp"
            style="@style/TextNormalLv2ColorBack"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:src="@drawable/ic_delete"
            android:text="Delete"
            android:textSize="@dimen/size_text_normal_lv2_5" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_edit_garden"
        android:layout_marginTop="@dimen/padding_top_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>